@page "/admin/invoices"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using ORTrackingSystem.Data
@using ORTrackingSystem.Models
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using MudBlazor

@attribute [Authorize(Policy = "AdminOnly")]
@rendermode InteractiveServer

@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IWebHostEnvironment Environment
@inject ILogger<Invoices> Logger

<PageTitle>Invoices</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Invoices Management</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="ShowCreateForm" Class="mb-4">
    Create New Invoice
</MudButton>

@if (!string.IsNullOrEmpty(StatusMessage))
{
    <MudAlert Severity="@(StatusClass == "alert-danger" ? Severity.Error : StatusClass == "alert-success" ? Severity.Success : Severity.Info)" Class="mb-4">
        @StatusMessage
    </MudAlert>
}

@if (ShowForm && EditingInvoice != null)
{
    <MudCard Elevation="3" Class="mb-6">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@(EditingInvoice.Id > 0 ? "Edit" : "Create") Invoice</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <EditForm Model="EditingInvoice" OnValidSubmit="SaveInvoice" FormName="invoiceForm">
                <DataAnnotationsValidator />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudSelect T="int" Label="Order Request (OR)" @bind-Value="EditingInvoice.ORId" @bind-Value:after="OnORChanged" Disabled="@(EditingInvoice.Id > 0)" Variant="Variant.Outlined" Required="true" RequiredError="OR is required">
                            <MudSelectItem T="int" Value="0">-- Select OR --</MudSelectItem>
                            @foreach (var or in ORsList)
                            {
                                <MudSelectItem T="int" Value="@or.Id">@or.ORNumber - @or.ContractContext.ContractName</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="EditingInvoice.InvoiceNumber" Label="Invoice Number" Variant="Variant.Outlined" For="@(() => EditingInvoice!.InvoiceNumber)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudNumericField @bind-Value="EditingInvoice.Amount" Label="Amount" Variant="Variant.Outlined" Step="0.01M" For="@(() => EditingInvoice!.Amount)" />
                    </MudItem>

                    <MudItem xs="12" md="6" Class="d-flex align-center">
                        <MudCheckBox @bind-Value="EditingInvoice.IsPaid" Label="Is Paid" Color="Color.Success" />
                    </MudItem>

                    @if (EditingInvoice.IsPaid)
                    {
                        <MudItem xs="12" md="6">
                            <MudDatePicker @bind-Date="EditingInvoice.PaidDate" Label="Paid Date" Variant="Variant.Outlined" For="@(() => EditingInvoice!.PaidDate)" />
                        </MudItem>
                    }

                    <MudItem xs="12">
                        <MudText Typo="Typo.subtitle1" Class="mb-2">Link LM Requests (optional)</MudText>
                        @if (AvailableRequests.Count > 0)
                        {
                            <MudPaper Outlined="true" Class="pa-4" Style="max-height: 200px; overflow-y: auto;">
                                @foreach (var request in AvailableRequests)
                                {
                                    <MudCheckBox T="bool"
                                                 Value="@EditingInvoice.SelectedRequestIds.Contains(request.Id)"
                                                 ValueChanged="@(e => ToggleRequest(request.Id, e))"
                                                 Label="@($"{request.RequestNumber} - {request.Amount:C} - {(request.Description ?? "N/A")}")"
                                                 Color="Color.Primary" />
                                }
                            </MudPaper>
                        }
                        else
                        {
                            <MudAlert Severity="Severity.Info" Dense="true">No LM Requests available for the selected OR.</MudAlert>
                        }
                    </MudItem>

                    <MudItem xs="12">
                        <MudPaper Class="pa-4 mt-2" Outlined="true">
                            <MudStack Spacing="2">
                                <MudText Typo="Typo.h6">Attachments</MudText>

                                @if (IsAttachmentMissing(EditingInvoice, AttachmentType.DeliveryNote) || IsAttachmentMissing(EditingInvoice, AttachmentType.InvoiceImage))
                                {
                                    <MudAlert Severity="Severity.Warning" Dense="true" Variant="Variant.Filled">Missing Attachment</MudAlert>
                                }

                                <MudList T="string" Dense="true">
                                    <MudListItem T="string" Icon="@GetAttachmentStatusIcon(EditingInvoice, AttachmentType.DeliveryNote)">
                                        Delivery Note: @GetAttachmentDisplayName(EditingInvoice, AttachmentType.DeliveryNote)
                                        @if (IsAttachmentMissing(EditingInvoice, AttachmentType.DeliveryNote))
                                        {
                                            <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small" Class="ms-2">Missing</MudChip>
                                        }
                                    </MudListItem>
                                    <MudListItem T="string" Icon="@GetAttachmentStatusIcon(EditingInvoice, AttachmentType.InvoiceImage)">
                                        Invoice Image: @GetAttachmentDisplayName(EditingInvoice, AttachmentType.InvoiceImage)
                                        @if (IsAttachmentMissing(EditingInvoice, AttachmentType.InvoiceImage))
                                        {
                                            <MudChip T="string" Color="Color.Error" Variant="Variant.Filled" Size="Size.Small" Class="ms-2">Missing</MudChip>
                                        }
                                    </MudListItem>
                                </MudList>

                                <div>
                                    <MudText Typo="Typo.caption">Delivery Note (required)</MudText>
                                    <InputFile OnChange="@(e => HandleFileSelected(e, AttachmentType.DeliveryNote))" class="form-control" accept="image/*,.pdf" />
                                </div>

                                <div>
                                    <MudText Typo="Typo.caption">Invoice Image (required)</MudText>
                                    <InputFile OnChange="@(e => HandleFileSelected(e, AttachmentType.InvoiceImage))" class="form-control" accept="image/*,.pdf" />
                                </div>
                            </MudStack>
                        </MudPaper>
                    </MudItem>
                </MudGrid>

                <MudCardActions Class="mt-4 pb-0 pl-0">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success" Disabled="@(EditingInvoice.ORId == 0)" Class="me-2">Save</MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="CancelEdit">Cancel</MudButton>
                </MudCardActions>
            </EditForm>
        </MudCardContent>
    </MudCard>
}

<MudTable Items="@InvoicesList" Hover="true" Striped="true" Elevation="3" Dense="true">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Invoice Number</MudTh>
        <MudTh>OR</MudTh>
        <MudTh>Amount</MudTh>
        <MudTh>Is Paid</MudTh>
        <MudTh>Attachments</MudTh>
        <MudTh>Paid Date</MudTh>
        <MudTh>Created Date</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Invoice Number">@context.InvoiceNumber</MudTd>
        <MudTd DataLabel="OR">@context.OR?.ORNumber</MudTd>
        <MudTd DataLabel="Amount">@context.Amount.ToString("C")</MudTd>
        <MudTd DataLabel="Is Paid">
            @if (context.IsPaid ?? false)
            {
                <MudChip T="string" Color="Color.Success" Size="Size.Small">Yes</MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Default" Size="Size.Small">No</MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Attachments">
            @if (HasMissingRequiredAttachments(context.InvoiceAttachments))
            {
                <MudChip T="string" Color="Color.Error" Size="Size.Small">Missing</MudChip>
            }
            else
            {
                <MudChip T="string" Color="Color.Success" Size="Size.Small">Complete</MudChip>
            }
        </MudTd>
        <MudTd DataLabel="Paid Date">@(context.PaidDate?.ToString("yyyy-MM-dd") ?? "-")</MudTd>
        <MudTd DataLabel="Created Date">@context.CreatedDate.ToString("yyyy-MM-dd")</MudTd>
        <MudTd DataLabel="Actions">
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="() => EditInvoice(context)" />
            <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Info" Size="Size.Small" OnClick="() => ViewDetails(context.Id)" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private List<Invoice> InvoicesList = new();
    private List<OR> ORsList = new();
    private List<LM_Request> AvailableRequests = new();
    private InvoiceFormModel? EditingInvoice;
    private bool ShowForm = false;
    private string StatusMessage = "";
    private string StatusClass = "";
    private string? CurrentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        CurrentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        await LoadORs();
        await LoadInvoices();
    }

    private async Task LoadORs()
    {
        ORsList = await DbContext.ORs
            .Include(o => o.ContractContext)
            .OrderBy(o => o.ORNumber)
            .ToListAsync();
    }

    private async Task LoadInvoices()
    {
        InvoicesList = await DbContext.Invoices
            .Include(i => i.OR)
            .Include(i => i.InvoiceAttachments)
            .Include(i => i.InvoiceRequestLinks)
                .ThenInclude(irl => irl.Request)
            .OrderByDescending(i => i.CreatedDate)
            .ToListAsync();
    }

    private async Task LoadAvailableRequests(int orId)
    {
        if (orId > 0)
        {
            AvailableRequests = await DbContext.LM_Requests
                .Where(r => r.ORId == orId)
                .OrderBy(r => r.RequestNumber)
                .ToListAsync();
        }
        else
        {
            AvailableRequests.Clear();
        }
    }

    private void ShowCreateForm()
    {
        EditingInvoice = new InvoiceFormModel
        {
            IsPaid = false
        };
        ShowForm = true;
        StatusMessage = "";
        AvailableRequests.Clear();
    }

    private async Task OnORChanged()
    {
        if (EditingInvoice != null)
        {
            await LoadAvailableRequests(EditingInvoice.ORId);
        }
    }

    private async Task EditInvoice(Invoice invoice)
    {
        await LoadAvailableRequests(invoice.ORId);

        EditingInvoice = new InvoiceFormModel
        {
            Id = invoice.Id,
            ORId = invoice.ORId,
            InvoiceNumber = invoice.InvoiceNumber,
            Amount = invoice.Amount,
            IsPaid = invoice.IsPaid ?? false,
            PaidDate = invoice.PaidDate,
            SelectedRequestIds = invoice.InvoiceRequestLinks.Select(irl => irl.RequestId).ToHashSet()
        };

        var deliveryNote = invoice.InvoiceAttachments.FirstOrDefault(a => a.AttachmentType == AttachmentType.DeliveryNote);
        var invoiceImage = invoice.InvoiceAttachments.FirstOrDefault(a => a.AttachmentType == AttachmentType.InvoiceImage);

        if (deliveryNote != null)
        {
            EditingInvoice.DeliveryNoteFileName = deliveryNote.FileName;
            EditingInvoice.ExistingDeliveryNoteId = deliveryNote.Id;
        }

        if (invoiceImage != null)
        {
            EditingInvoice.InvoiceImageFileName = invoiceImage.FileName;
            EditingInvoice.ExistingInvoiceImageId = invoiceImage.Id;
        }

        ShowForm = true;
        StatusMessage = "";
    }

    private void CancelEdit()
    {
        ShowForm = false;
        EditingInvoice = null;
        StatusMessage = "";
        AvailableRequests.Clear();
    }

    private void ViewDetails(int invoiceId)
    {
        Navigation.NavigateTo($"/admin/invoices/{invoiceId}");
    }

    private void ToggleRequest(int requestId, bool isChecked)
    {
        if (EditingInvoice == null) return;

        if (isChecked)
        {
            EditingInvoice.SelectedRequestIds.Add(requestId);
        }
        else
        {
            EditingInvoice.SelectedRequestIds.Remove(requestId);
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e, AttachmentType attachmentType)
    {
        if (EditingInvoice == null) return;

        var file = e.File;
        if (file == null) return;

        const long maxFileSize = 10 * 1024 * 1024;
        if (file.Size > maxFileSize)
        {
            StatusMessage = "File size must not exceed 10MB.";
            StatusClass = "alert-danger";
            return;
        }

        if (attachmentType == AttachmentType.DeliveryNote)
        {
            EditingInvoice.DeliveryNoteFile = file;
            EditingInvoice.DeliveryNoteFileName = file.Name;
        }
        else if (attachmentType == AttachmentType.InvoiceImage)
        {
            EditingInvoice.InvoiceImageFile = file;
            EditingInvoice.InvoiceImageFileName = file.Name;
        }

        await Task.CompletedTask;
    }

    private static bool HasMissingRequiredAttachments(IEnumerable<InvoiceAttachment> attachments)
    {
        var types = attachments.Select(a => a.AttachmentType).Distinct().ToHashSet();
        return !types.Contains(AttachmentType.DeliveryNote) || !types.Contains(AttachmentType.InvoiceImage);
    }

    private static bool IsAttachmentMissing(InvoiceFormModel form, AttachmentType attachmentType)
    {
        return attachmentType switch
        {
            AttachmentType.DeliveryNote => form.DeliveryNoteFile == null && string.IsNullOrWhiteSpace(form.DeliveryNoteFileName),
            AttachmentType.InvoiceImage => form.InvoiceImageFile == null && string.IsNullOrWhiteSpace(form.InvoiceImageFileName),
            _ => true
        };
    }

    private static string GetAttachmentDisplayName(InvoiceFormModel form, AttachmentType attachmentType)
    {
        return attachmentType switch
        {
            AttachmentType.DeliveryNote => string.IsNullOrWhiteSpace(form.DeliveryNoteFileName) ? "Not uploaded" : form.DeliveryNoteFileName,
            AttachmentType.InvoiceImage => string.IsNullOrWhiteSpace(form.InvoiceImageFileName) ? "Not uploaded" : form.InvoiceImageFileName,
            _ => "Not uploaded"
        };
    }

    private static string GetAttachmentStatusIcon(InvoiceFormModel form, AttachmentType attachmentType)
    {
        return IsAttachmentMissing(form, attachmentType) ? Icons.Material.Filled.Cancel : Icons.Material.Filled.CheckCircle;
    }

    private async Task SaveInvoice()
    {
        if (EditingInvoice == null) return;

        if (EditingInvoice.ORId == 0)
        {
            StatusMessage = "Please select an OR.";
            StatusClass = "alert-danger";
            return;
        }

        if (EditingInvoice.IsPaid && EditingInvoice.PaidDate == null)
        {
            StatusMessage = "Paid Date is required when the invoice is marked as paid.";
            StatusClass = "alert-danger";
            return;
        }

        if (EditingInvoice.Id == 0)
        {
            if (EditingInvoice.DeliveryNoteFile == null)
            {
                StatusMessage = "Delivery Note attachment is required.";
                StatusClass = "alert-danger";
                return;
            }

            if (EditingInvoice.InvoiceImageFile == null)
            {
                StatusMessage = "Invoice Image attachment is required.";
                StatusClass = "alert-danger";
                return;
            }
        }

        try
        {
            if (EditingInvoice.Id == 0)
            {
                var newInvoice = new Invoice
                {
                    ORId = EditingInvoice.ORId,
                    InvoiceNumber = EditingInvoice.InvoiceNumber,
                    Amount = EditingInvoice.Amount,
                    IsPaid = EditingInvoice.IsPaid,
                    PaidDate = EditingInvoice.IsPaid ? EditingInvoice.PaidDate : null,
                    CreatedDate = DateTime.UtcNow,
                    CreatedByUserId = CurrentUserId ?? "unknown"
                };
                DbContext.Invoices.Add(newInvoice);
                await DbContext.SaveChangesAsync();

                await SaveAttachment(newInvoice.Id, EditingInvoice.DeliveryNoteFile!, AttachmentType.DeliveryNote);
                await SaveAttachment(newInvoice.Id, EditingInvoice.InvoiceImageFile!, AttachmentType.InvoiceImage);

                foreach (var requestId in EditingInvoice.SelectedRequestIds)
                {
                    DbContext.InvoiceRequestLinks.Add(new InvoiceRequestLink
                    {
                        InvoiceId = newInvoice.Id,
                        RequestId = requestId
                    });
                }
                await DbContext.SaveChangesAsync();
            }
            else
            {
                var existingInvoice = await DbContext.Invoices
                    .Include(i => i.InvoiceRequestLinks)
                    .FirstOrDefaultAsync(i => i.Id == EditingInvoice.Id);

                if (existingInvoice != null)
                {
                    existingInvoice.InvoiceNumber = EditingInvoice.InvoiceNumber;
                    existingInvoice.Amount = EditingInvoice.Amount;
                    existingInvoice.IsPaid = EditingInvoice.IsPaid;
                    existingInvoice.PaidDate = EditingInvoice.IsPaid ? EditingInvoice.PaidDate : null;

                    if (EditingInvoice.DeliveryNoteFile != null)
                    {
                        if (EditingInvoice.ExistingDeliveryNoteId > 0)
                        {
                            var oldAttachment = await DbContext.InvoiceAttachments.FindAsync(EditingInvoice.ExistingDeliveryNoteId);
                            if (oldAttachment != null)
                            {
                                DeletePhysicalFile(oldAttachment.FilePath);
                                DbContext.InvoiceAttachments.Remove(oldAttachment);
                            }
                        }
                        await SaveAttachment(existingInvoice.Id, EditingInvoice.DeliveryNoteFile, AttachmentType.DeliveryNote);
                    }

                    if (EditingInvoice.InvoiceImageFile != null)
                    {
                        if (EditingInvoice.ExistingInvoiceImageId > 0)
                        {
                            var oldAttachment = await DbContext.InvoiceAttachments.FindAsync(EditingInvoice.ExistingInvoiceImageId);
                            if (oldAttachment != null)
                            {
                                DeletePhysicalFile(oldAttachment.FilePath);
                                DbContext.InvoiceAttachments.Remove(oldAttachment);
                            }
                        }
                        await SaveAttachment(existingInvoice.Id, EditingInvoice.InvoiceImageFile, AttachmentType.InvoiceImage);
                    }

                    var existingLinks = await DbContext.InvoiceRequestLinks
                        .Where(irl => irl.InvoiceId == existingInvoice.Id)
                        .ToListAsync();
                    DbContext.InvoiceRequestLinks.RemoveRange(existingLinks);

                    foreach (var requestId in EditingInvoice.SelectedRequestIds)
                    {
                        DbContext.InvoiceRequestLinks.Add(new InvoiceRequestLink
                        {
                            InvoiceId = existingInvoice.Id,
                            RequestId = requestId
                        });
                    }

                    await DbContext.SaveChangesAsync();
                }
            }

            StatusMessage = EditingInvoice.Id == 0 ? "Invoice created successfully." : "Invoice updated successfully.";
            StatusClass = "alert-success";

            ShowForm = false;
            EditingInvoice = null;
            await LoadInvoices();
        }
        catch (DbUpdateException ex)
        {
            if (ex.InnerException?.Message.Contains("IX_Invoices_ORId_InvoiceNumber") ?? false)
            {
                StatusMessage = "Error: An invoice with this Invoice Number already exists for this OR.";
            }
            else
            {
                StatusMessage = $"Error saving invoice: {ex.Message}";
            }
            StatusClass = "alert-danger";
        }
        catch (Exception ex)
        {
            StatusMessage = $"Error saving invoice: {ex.Message}";
            StatusClass = "alert-danger";
        }
    }

    private async Task SaveAttachment(int invoiceId, IBrowserFile file, AttachmentType attachmentType)
    {
        var allowedExtensions = new[] { ".pdf", ".jpg", ".jpeg", ".png", ".gif" };
        var extension = Path.GetExtension(file.Name).ToLowerInvariant();

        if (string.IsNullOrEmpty(extension) || !allowedExtensions.Contains(extension))
        {
            throw new InvalidOperationException($"File type '{extension}' is not allowed. Allowed types: {string.Join(", ", allowedExtensions)}");
        }

        var uploadsPath = Path.Combine(Environment.WebRootPath, "uploads");
        Directory.CreateDirectory(uploadsPath);

        var randomFileName = $"{Guid.NewGuid()}{extension}";
        var filePath = Path.Combine(uploadsPath, randomFileName);

        using (var stream = new FileStream(filePath, FileMode.Create))
        {
            await file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024).CopyToAsync(stream);
        }

        var attachment = new InvoiceAttachment
        {
            InvoiceId = invoiceId,
            AttachmentType = attachmentType,
            FilePath = $"/uploads/{randomFileName}",
            FileName = file.Name,
            FileSize = file.Size,
            ContentType = file.ContentType,
            UploadedDate = DateTime.UtcNow,
            CreatedByUserId = CurrentUserId ?? "unknown"
        };

        DbContext.InvoiceAttachments.Add(attachment);
        await DbContext.SaveChangesAsync();
    }

    private void DeletePhysicalFile(string filePath)
    {
        try
        {
            var physicalPath = Path.Combine(Environment.WebRootPath, filePath.TrimStart('/'));
            if (File.Exists(physicalPath))
            {
                File.Delete(physicalPath);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to delete physical file at path: {FilePath}", filePath);
        }
    }

    public class InvoiceFormModel
    {
        public int Id { get; set; }

        public int ORId { get; set; }

        [Required]
        [MaxLength(100)]
        public string InvoiceNumber { get; set; } = string.Empty;

        [Required]
        [Range(0.01, double.MaxValue, ErrorMessage = "Amount must be greater than 0")]
        public decimal Amount { get; set; }

        public bool IsPaid { get; set; }

        public DateTime? PaidDate { get; set; }

        public HashSet<int> SelectedRequestIds { get; set; } = new();

        public IBrowserFile? DeliveryNoteFile { get; set; }
        public string? DeliveryNoteFileName { get; set; }
        public int ExistingDeliveryNoteId { get; set; }

        public IBrowserFile? InvoiceImageFile { get; set; }
        public string? InvoiceImageFileName { get; set; }
        public int ExistingInvoiceImageId { get; set; }
    }
}