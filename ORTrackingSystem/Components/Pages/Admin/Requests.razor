@page "/admin/requests"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using ORTrackingSystem.Data
@using ORTrackingSystem.Models
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations
@attribute [Authorize(Policy = "AdminOnly")]
@rendermode InteractiveServer

@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>LM Requests</PageTitle>

<h1>LM Requests</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateForm">
        <span class="bi bi-plus-circle"></span> Create New Request
    </button>
</div>

@if (ShowForm && EditingRequest != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h3>@(EditingRequest.Id > 0 ? "Edit" : "Create") Request</h3>
        </div>
        <div class="card-body">
            <EditForm Model="EditingRequest" OnValidSubmit="SaveRequest" FormName="requestForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">OR</label>
                        <InputSelect @bind-Value="EditingRequest.ORId" class="form-control" disabled="@(EditingRequest.Id > 0)">
                            <option value="0">-- Select OR --</option>
                            @foreach (var or in ORsList)
                            {
                                <option value="@or.Id">@or.ORNumber (@or.ContractContext.ContractName)</option>
                            }
                        </InputSelect>
                        @if (EditingRequest.ORId == 0)
                        {
                            <div class="text-danger">OR is required</div>
                        }
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Request Number</label>
                        <InputText @bind-Value="EditingRequest.RequestNumber" class="form-control" />
                        <ValidationMessage For="() => EditingRequest!.RequestNumber" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Amount</label>
                        <InputNumber @bind-Value="EditingRequest.Amount" class="form-control" />
                        <ValidationMessage For="() => EditingRequest!.Amount" />
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Description</label>
                        <InputTextArea @bind-Value="EditingRequest.Description" class="form-control" rows="2" />
                        <ValidationMessage For="() => EditingRequest!.Description" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <InputCheckbox @bind-Value="EditingRequest.IsCompleted" class="form-check-input" id="isCompleted" />
                            <label class="form-check-label" for="isCompleted">
                                Is Completed
                            </label>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <InputCheckbox @bind-Value="EditingRequest.IsCancelled" class="form-check-input" id="isCancelled" />
                            <label class="form-check-label" for="isCancelled">
                                Is Cancelled
                            </label>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success" disabled="@(EditingRequest.ORId == 0)">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@if (ViewingRequest != null)
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Request Details</h3>
            <button class="btn btn-sm btn-secondary" @onclick="CloseDetails">Close</button>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@ViewingRequest.Id</dd>
                        
                        <dt class="col-sm-4">OR:</dt>
                        <dd class="col-sm-8">@ViewingRequest.OR.ORNumber (@ViewingRequest.OR.ContractContext.ContractName)</dd>
                        
                        <dt class="col-sm-4">Request Number:</dt>
                        <dd class="col-sm-8">@ViewingRequest.RequestNumber</dd>
                        
                        <dt class="col-sm-4">Amount:</dt>
                        <dd class="col-sm-8">@ViewingRequest.Amount.ToString("C")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(ViewingRequest.Description) ? "N/A" : ViewingRequest.Description)</dd>
                        
                        <dt class="col-sm-4">Is Completed:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(ViewingRequest.IsCompleted == true ? "bg-success" : "bg-secondary")">
                                @(ViewingRequest.IsCompleted == true ? "Yes" : "No")
                            </span>
                        </dd>
                        
                        <dt class="col-sm-4">Is Cancelled:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(ViewingRequest.IsCancelled == true ? "bg-danger" : "bg-secondary")">
                                @(ViewingRequest.IsCancelled == true ? "Yes" : "No")
                            </span>
                        </dd>
                        
                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@ViewingRequest.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(StatusMessage))
{
    <div class="alert @StatusClass" role="alert">
        @StatusMessage
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>OR Number</th>
            <th>Request Number</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Completed</th>
            <th>Cancelled</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in RequestsList)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.OR.ORNumber</td>
                <td>@request.RequestNumber</td>
                <td>@(string.IsNullOrEmpty(request.Description) ? "N/A" : (request.Description.Length > 50 ? request.Description.Substring(0, 50) + "..." : request.Description))</td>
                <td>@request.Amount.ToString("C")</td>
                <td>
                    @if (request.IsCompleted == true)
                    {
                        <span class="bi bi-check-circle-fill text-success"></span>
                    }
                    else
                    {
                        <span class="bi bi-circle text-secondary"></span>
                    }
                </td>
                <td>
                    @if (request.IsCancelled == true)
                    {
                        <span class="bi bi-x-circle-fill text-danger"></span>
                    }
                    else
                    {
                        <span class="bi bi-circle text-secondary"></span>
                    }
                </td>
                <td>@request.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <div class="btn-group" role="group">
                        <button class="btn btn-sm btn-info" @onclick="() => ViewDetails(request)">View</button>
                        <button class="btn btn-sm btn-primary" @onclick="() => EditRequest(request)">Edit</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!RequestsList.Any())
{
    <div class="alert alert-info">
        No requests found. Click "Create New Request" to add one.
    </div>
}

@code {
    private List<LM_Request> RequestsList = new();
    private List<OR> ORsList = new();
    private RequestFormModel? EditingRequest;
    private LM_Request? ViewingRequest;
    private bool ShowForm = false;
    private string StatusMessage = "";
    private string StatusClass = "";
    private string? CurrentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        CurrentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        
        await LoadORs();
        await LoadRequests();
    }

    private async Task LoadORs()
    {
        ORsList = await DbContext.ORs
            .Include(o => o.ContractContext)
            .OrderBy(o => o.ORNumber)
            .ToListAsync();
    }

    private async Task LoadRequests()
    {
        RequestsList = await DbContext.LM_Requests
            .Include(r => r.OR)
                .ThenInclude(o => o.ContractContext)
            .OrderByDescending(r => r.CreatedDate)
            .ToListAsync();
    }

    private void ShowCreateForm()
    {
        EditingRequest = new RequestFormModel
        {
            IsCompleted = false,
            IsCancelled = false
        };
        ShowForm = true;
        ViewingRequest = null;
        StatusMessage = "";
    }

    private void EditRequest(LM_Request request)
    {
        // Check if OR is closed
        if (request.OR.Status == ORStatus.Closed)
        {
            StatusMessage = "Cannot edit a request for a closed OR. Please reopen the OR first.";
            StatusClass = "alert-warning";
            return;
        }

        EditingRequest = new RequestFormModel
        {
            Id = request.Id,
            ORId = request.ORId,
            RequestNumber = request.RequestNumber,
            Description = request.Description,
            Amount = request.Amount,
            IsCompleted = request.IsCompleted ?? false,
            IsCancelled = request.IsCancelled ?? false
        };
        ShowForm = true;
        ViewingRequest = null;
        StatusMessage = "";
    }

    private void ViewDetails(LM_Request request)
    {
        ViewingRequest = request;
        ShowForm = false;
        EditingRequest = null;
        StatusMessage = "";
    }

    private void CloseDetails()
    {
        ViewingRequest = null;
    }

    private void CancelEdit()
    {
        ShowForm = false;
        EditingRequest = null;
        StatusMessage = "";
    }

    private async Task SaveRequest()
    {
        if (EditingRequest == null) return;
        
        if (EditingRequest.ORId == 0)
        {
            StatusMessage = "Please select an OR.";
            StatusClass = "alert-danger";
            return;
        }

        // Check if OR is closed
        var selectedOR = await DbContext.ORs.FindAsync(EditingRequest.ORId);
        if (selectedOR == null)
        {
            StatusMessage = "The selected OR does not exist.";
            StatusClass = "alert-danger";
            return;
        }

        if (selectedOR.Status == ORStatus.Closed)
        {
            StatusMessage = "Cannot create or edit a request for a closed OR. Please reopen the OR first.";
            StatusClass = "alert-warning";
            return;
        }

        try
        {
            if (EditingRequest.Id == 0)
            {
                // Create new
                var newRequest = new LM_Request
                {
                    ORId = EditingRequest.ORId,
                    RequestNumber = EditingRequest.RequestNumber,
                    Description = EditingRequest.Description,
                    Amount = EditingRequest.Amount,
                    IsCompleted = EditingRequest.IsCompleted,
                    IsCancelled = EditingRequest.IsCancelled,
                    CreatedDate = DateTime.UtcNow,
                    CreatedByUserId = CurrentUserId ?? "unknown"
                };
                DbContext.LM_Requests.Add(newRequest);
            }
            else
            {
                // Update existing
                var existingRequest = await DbContext.LM_Requests.FindAsync(EditingRequest.Id);
                if (existingRequest != null)
                {
                    existingRequest.RequestNumber = EditingRequest.RequestNumber;
                    existingRequest.Description = EditingRequest.Description;
                    existingRequest.Amount = EditingRequest.Amount;
                    existingRequest.IsCompleted = EditingRequest.IsCompleted;
                    existingRequest.IsCancelled = EditingRequest.IsCancelled;
                }
            }

            await DbContext.SaveChangesAsync();
            
            StatusMessage = EditingRequest.Id == 0 
                ? "Request created successfully."
                : "Request updated successfully.";
            StatusClass = "alert-success";
            
            ShowForm = false;
            EditingRequest = null;
            await LoadRequests();
        }
        catch (DbUpdateException ex)
        {
            if (ex.InnerException?.Message.Contains("IX_LM_Requests_ORId_RequestNumber") ?? false)
            {
                StatusMessage = "Error: A request with this Request Number already exists for the selected OR. Please use a different Request Number.";
            }
            else
            {
                StatusMessage = $"Error saving request: {ex.Message}";
            }
            StatusClass = "alert-danger";
        }
        catch (Exception ex)
        {
            StatusMessage = $"Error saving request: {ex.Message}";
            StatusClass = "alert-danger";
        }
    }

    public class RequestFormModel
    {
        public int Id { get; set; }

        public int ORId { get; set; }

        [Required]
        [MaxLength(100)]
        public string RequestNumber { get; set; } = string.Empty;

        [MaxLength(500)]
        public string? Description { get; set; }

        [Required]
        [Range(0.01, double.MaxValue, ErrorMessage = "Amount must be greater than 0")]
        public decimal Amount { get; set; }

        public bool IsCompleted { get; set; }

        public bool IsCancelled { get; set; }
    }
}
