@page "/admin/ors/{orId:int}/requests"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using ORTrackingSystem.Data
@using ORTrackingSystem.Models
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations
@attribute [Authorize(Policy = "AdminOnly")]
@rendermode InteractiveServer

@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>LM Requests - @CurrentOR?.ORNumber</PageTitle>

<div class="mb-3">
    <button class="btn btn-secondary" @onclick="GoBack">
        <span class="bi bi-arrow-left"></span> Back to ORs
    </button>
</div>

@if (CurrentOR == null)
{
    <div class="alert alert-warning">
        OR not found.
    </div>
}
else
{
    <h1>LM Requests for OR: @CurrentOR.ORNumber</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Contract Context:</strong> @CurrentOR.ContractContext.ContractName
                </div>
                <div class="col-md-3">
                    <strong>Budget Type:</strong> @CurrentOR.BudgetType
                </div>
                <div class="col-md-3">
                    <strong>Status:</strong> 
                    <span class="badge @(CurrentOR.Status == ORStatus.Open ? "bg-success" : "bg-secondary")">
                        @CurrentOR.Status
                    </span>
                </div>
                <div class="col-md-3">
                    <strong>Total Value:</strong> @CurrentOR.TotalValue.ToString("C")
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" @onclick="ShowCreateForm" disabled="@(CurrentOR.Status == ORStatus.Closed)">
            <span class="bi bi-plus-circle"></span> Create New LM Request
        </button>
        @if (CurrentOR.Status == ORStatus.Closed)
        {
            <span class="text-warning ms-2">
                <span class="bi bi-exclamation-triangle"></span> Cannot create requests for closed OR
            </span>
        }
    </div>

    @if (ShowForm && EditingRequest != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h3>@(EditingRequest.Id > 0 ? "Edit" : "Create") LM Request</h3>
            </div>
            <div class="card-body">
                <EditForm Model="EditingRequest" OnValidSubmit="SaveRequest" FormName="requestForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Request Number</label>
                            <InputText @bind-Value="EditingRequest.RequestNumber" class="form-control" />
                            <ValidationMessage For="() => EditingRequest!.RequestNumber" />
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Amount</label>
                            <InputNumber @bind-Value="EditingRequest.Amount" class="form-control" step="0.01" />
                            <ValidationMessage For="() => EditingRequest!.Amount" />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <InputText @bind-Value="EditingRequest.Description" class="form-control" />
                        <ValidationMessage For="() => EditingRequest!.Description" />
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <InputCheckbox @bind-Value="EditingRequest.IsCompleted" />
                                Is Completed
                            </label>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <InputCheckbox @bind-Value="EditingRequest.IsCancelled" />
                                Is Cancelled
                            </label>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(StatusMessage))
    {
        <div class="alert @StatusClass" role="alert">
            @StatusMessage
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Request Number</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Completed</th>
                <th>Cancelled</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (RequestsList.Count == 0)
            {
                <tr>
                    <td colspan="8" class="text-center">No LM Requests found for this OR.</td>
                </tr>
            }
            else
            {
                @foreach (var request in RequestsList)
                {
                    <tr>
                        <td>@request.Id</td>
                        <td>@request.RequestNumber</td>
                        <td>@(string.IsNullOrEmpty(request.Description) ? "-" : request.Description)</td>
                        <td>@request.Amount.ToString("C")</td>
                        <td>
                            @if (request.IsCompleted == true)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            @if (request.IsCancelled == true)
                            {
                                <span class="badge bg-danger">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>@request.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <button class="btn btn-sm btn-primary" @onclick="() => EditRequest(request)" disabled="@(CurrentOR.Status == ORStatus.Closed)">
                                Edit
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public int ORId { get; set; }

    private OR? CurrentOR;
    private List<LM_Request> RequestsList = new();
    private RequestFormModel? EditingRequest;
    private bool ShowForm = false;
    private string StatusMessage = "";
    private string StatusClass = "";
    private string? CurrentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        CurrentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        
        await LoadOR();
        await LoadRequests();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadOR();
        await LoadRequests();
    }

    private async Task LoadOR()
    {
        CurrentOR = await DbContext.ORs
            .Include(o => o.ContractContext)
            .FirstOrDefaultAsync(o => o.Id == ORId);
    }

    private async Task LoadRequests()
    {
        RequestsList = await DbContext.LM_Requests
            .Where(r => r.ORId == ORId)
            .OrderByDescending(r => r.CreatedDate)
            .ToListAsync();
    }

    private void ShowCreateForm()
    {
        if (CurrentOR?.Status == ORStatus.Closed)
        {
            StatusMessage = "Cannot create requests for a closed OR.";
            StatusClass = "alert-warning";
            return;
        }

        EditingRequest = new RequestFormModel
        {
            IsCompleted = false,
            IsCancelled = false
        };
        ShowForm = true;
        StatusMessage = "";
    }

    private void EditRequest(LM_Request request)
    {
        if (CurrentOR?.Status == ORStatus.Closed)
        {
            StatusMessage = "Cannot edit requests for a closed OR.";
            StatusClass = "alert-warning";
            return;
        }

        EditingRequest = new RequestFormModel
        {
            Id = request.Id,
            RequestNumber = request.RequestNumber,
            Description = request.Description,
            Amount = request.Amount,
            IsCompleted = request.IsCompleted ?? false,
            IsCancelled = request.IsCancelled ?? false
        };
        ShowForm = true;
        StatusMessage = "";
    }

    private void CancelEdit()
    {
        ShowForm = false;
        EditingRequest = null;
        StatusMessage = "";
    }

    private async Task SaveRequest()
    {
        if (EditingRequest == null || CurrentOR == null) return;

        // Check if OR is closed
        if (CurrentOR.Status == ORStatus.Closed)
        {
            StatusMessage = "Cannot create or edit requests for a closed OR.";
            StatusClass = "alert-danger";
            return;
        }

        try
        {
            if (EditingRequest.Id == 0)
            {
                // Create new
                var newRequest = new LM_Request
                {
                    ORId = ORId,
                    RequestNumber = EditingRequest.RequestNumber,
                    Description = EditingRequest.Description,
                    Amount = EditingRequest.Amount,
                    IsCompleted = EditingRequest.IsCompleted,
                    IsCancelled = EditingRequest.IsCancelled,
                    CreatedDate = DateTime.UtcNow,
                    CreatedByUserId = CurrentUserId ?? "unknown"
                };
                DbContext.LM_Requests.Add(newRequest);
            }
            else
            {
                // Update existing
                var existingRequest = await DbContext.LM_Requests.FindAsync(EditingRequest.Id);
                if (existingRequest != null)
                {
                    existingRequest.RequestNumber = EditingRequest.RequestNumber;
                    existingRequest.Description = EditingRequest.Description;
                    existingRequest.Amount = EditingRequest.Amount;
                    existingRequest.IsCompleted = EditingRequest.IsCompleted;
                    existingRequest.IsCancelled = EditingRequest.IsCancelled;
                }
            }

            await DbContext.SaveChangesAsync();
            
            StatusMessage = EditingRequest.Id == 0 
                ? "LM Request created successfully."
                : "LM Request updated successfully.";
            StatusClass = "alert-success";
            
            ShowForm = false;
            EditingRequest = null;
            await LoadRequests();
        }
        catch (DbUpdateException ex)
        {
            if (ex.InnerException?.Message.Contains("IX_LM_Requests_ORId_RequestNumber") ?? false)
            {
                StatusMessage = "Error: A request with this Request Number already exists for this OR.";
            }
            else
            {
                StatusMessage = $"Error saving LM Request: {ex.Message}";
            }
            StatusClass = "alert-danger";
        }
        catch (Exception ex)
        {
            StatusMessage = $"Error saving LM Request: {ex.Message}";
            StatusClass = "alert-danger";
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/admin/ors");
    }

    public class RequestFormModel
    {
        public int Id { get; set; }

        [Required]
        [MaxLength(100)]
        public string RequestNumber { get; set; } = string.Empty;

        [MaxLength(500)]
        public string? Description { get; set; }

        [Required]
        [Range(0.01, double.MaxValue, ErrorMessage = "Amount must be greater than 0")]
        public decimal Amount { get; set; }

        public bool IsCompleted { get; set; }

        public bool IsCancelled { get; set; }
    }
}
